<h1 id="main-title">Poll It Together</h1><hr>

{{{messages}}}
{{msg}}

<h2>Generate a new poll:</h2>

<form role="form" action="/" method="post" id="poll-form">
  Poll name: <input type="text" name="pollName" class="pollName" placeholder="Enter a name"><br>
  Poll description:<br>
  <textarea rows="4" cols="50" name="pollDescription" class="pollDescription" form="poll-form" placeholder="Enter description here..."></textarea><br><br>

  <button type="button" class="add-new-button" name="add-new-button">Add new question</button><br><br>

  <div class="question-list">
    Question 1:<br>
    <input data-id="1" type="text" name="questions[question1]" class="question" id="question1" placeholder="Enter a question"><br><br>
  </div>

  Select time to auto-close:
  <select name="autoCloseTime" id="autoCloseList" form="poll-form">
    <option name="autoCloseTime" value="manual">Manual</option>
    <option name="autoCloseTime" value="5">5 mins</option>
    <option name="autoCloseTime" value="10">10 mins</option>
    <option name="autoCloseTime" value="15">15 mins</option>
    <option name="autoCloseTime" value="30">30 mins</option>
    <option name="autoCloseTime" value="60">1 hour</option>
    <option name="autoCloseTime" value="120">2 hours</option>
    <option name="autoCloseTime" value="720">12 hours</option>
    <option name="autoCloseTime" value="1440">24 hours</option>
  </select><br><br>

  Show results on poll page?<br>
  <div class="show-results">
    <input type="radio" name="showPollResults" value="Yes">Yes<br>
    <input type="radio" name="showPollResults" value="No">No<br>
  </div>

  <input class="poll-submit" type="submit" value="Submit">
</form>

<script src="index.js"></script>
